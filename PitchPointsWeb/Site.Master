                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-offset-0 col-md-10">
                                                    <div class="input-field col s12">
                                                        <i class="material-icons prefix">lock_outline</i>
                                                        <asp:TextBox runat="server" ID="user_password" TextMode="Password" CssClass="validate" />
                                                        <asp:Label runat="server" AssociatedControlID="user_password" />
                                                        <%--<label for="user_password" data-error="Invalid password input" data-success="">Password</label>--%>
                                                    <asp:Button ID="btnLogin" runat="server" Text="Log in" CssClass="btn btn-primary" OnClientClick="return login();" />
                                                        

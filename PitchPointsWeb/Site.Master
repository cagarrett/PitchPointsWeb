<%--<%@ Master Language="C#" AutoEventWireup="True" CodeBehind="Site.master.cs" Inherits="PitchPointsWeb.SiteMaster" %>--%>
<%@ Import Namespace="Microsoft.Ajax.Utilities" %>
<%@ Import Namespace="PitchPointsWeb" %>

<!DOCTYPE html>

<html lang="en">
<head runat="server">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%: Page.Title %> - Pitch Points</title>

    <asp:PlaceHolder runat="server">
        <%: Scripts.Render("~/bundles/modernizr") %>
    </asp:PlaceHolder>
    <webopt:BundleReference runat="server" Path="~/Content/css" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <script type="text/javascript">
        function login(obj) {
            //alert(<%= LoginViewPopup.FindControl("user_email").ClientID %>.value);
            //alert(<%= LoginViewPopup.FindControl("user_password").ClientID %>.value);
            var model = {};
            model.Email = <%= LoginViewPopup.FindControl("user_email").ClientID %>.value;
            model.Password = <%= LoginViewPopup.FindControl("user_password").ClientID %>.value;
            $.ajax({
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                type: "POST",
                url: "../api/Account/Login",
                data: JSON.stringify(model),
                accept: "application/json",
                contentType: "application/json",
                dataType: "json",
                success: function (msg) {
                    $('#loginModal').modal().hide();
                    if (msg.Success) {
                        document.cookie = "Token=" + msg.Token;
                    } else {
                        switch(msg.ResponseCode) {
                            case 1:
                                authError();
                                break;
                            case 2:
                                serverError();
                                break;
                            case 101:
                                accountDoesntExist();
                                break;
                            case 102:
                                incorrectPassword();
                                break;
                        }
                    }
                },
                error: function(msg) {
                    $('#loginModal').modal().hide();
                    serverError();
                }
            });
            return false;
        }
        function incorrectPassword() {
            swal({
                title: 'Incorrect Password!',
                text: 'The password you entered does not match the username provided.',
                type: 'error'
            });
        }
        function authError() {
            swal({
                title: 'Authentication Error!',
                text: 'We are having trouble authenticating your credentials. Please try again.',
                type: 'error'
            });
        }
        function serverError() {
            swal({
                title: 'Server Error!',
                text: 'We are having trouble with our server. Please try again.',
                type: 'error'
            });
        }
        function accountDoesntExist() {
            swal({
                title: 'No account registered!',
                text: 'This email address has not been registered with us.',
                type: 'error'
            });
        }
    </script>
</head>
<body>

                        </ul>
                        <li><a runat="server" href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a></li>
                    </ul>
                    <div id="auth">
                        <div id="loggedOut">
                            <ul class="nav navbar-nav navbar-right">
                                <li><a runat="server" href="~/Account/Register.aspx">Register</a></li>
                                <li><a runat="server" href="#" data-toggle="modal" data-target="#loginModal">Log in</a></li>
                            </ul>
